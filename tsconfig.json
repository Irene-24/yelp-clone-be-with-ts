{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@routes/*": ["src/routes/*"],
      "@loaders/*": ["src/loaders/*"],
      "@repos/*": ["src/repos/*"],
      "@services/*": ["src/services/*"],
      "@controllers/*": ["src/controllers/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
